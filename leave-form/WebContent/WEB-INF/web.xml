<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>leave-form</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  <servlet-name>leaveServlet</servlet-name>
  <servlet-class>com.xworkz.leaveapp.server.LeaveServlet</servlet-class>
  <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>leaveServlet</servlet-name>
  <url-pattern>/leaveAction</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>searchByNameServlet</servlet-name>
  <servlet-class>com.xworkz.leaveapp.server.SearchByNameServlet</servlet-class>
  <load-on-startup>2</load-on-startup>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>searchByNameServlet</servlet-name>
  <url-pattern>/searchByName</url-pattern>
  </servlet-mapping>
</web-app>